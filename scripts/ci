#!/usr/bin/env bash
set -euo pipefail

if [[ -f Package.swift ]]; then
  if [[ "$(uname -s)" != "Darwin" ]]; then
    echo "macOS-only Swift package detected; skipping swift test on $(uname -s)."
  elif command -v swift >/dev/null 2>&1; then
    swift test
  else
    echo "Swift not available on this runner; skipping swift test in scripts/ci."
  fi
  exit 0
fi

echo "No project-specific CI steps configured in scripts/ci."
exit 0
